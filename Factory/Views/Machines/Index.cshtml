@{
  Layout = "_Layout";
}

@using Factory.Models;
@model IEnumerable<Factory.Models.Machine>;

@if (Model.Count() == 0 && ViewBag.SearchFlag == 0)
{
  <p>There are no machines to display, please add a machine.</p>
}
else if (Model.Count() == 0 && ViewBag.SearchFlag == 1)
{
  <p>Your search returned no results.</p>
}
<form action="/machines/create" method="get">
  <button type="submit" class="btn btn-primary mb-3">Add New Machine</button>
</form>
@foreach (Machine machine in Model)
{
  @Html.Partial("MachineCard", machine)
}