@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<section class="card mb-3">
  <div class="card-header">
    <div class="cardListName">Edit Machine: @Html.DisplayFor(model => model.Name)</div>
    <div class="cardListButton">
      @using (Html.BeginForm("Delete", "Machines", new {id = Model.MachineId}))
      {
        <button type="submit" class="btn btn-danger">Delete Machine</button>
      }
    </div>
  </div>
  <div class="card-body">
    <div class="card-text">
      @using (Html.BeginForm())
      {
        @Html.HiddenFor(model => model.MachineId)
        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        <input type="submit" value="Save" class="btn btn-primary mt-3 mb-3" />
      }
    </div>
  </div>
</section>