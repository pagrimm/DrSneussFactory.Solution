@{
  Layout = "_Layout";
}

@using DrSneussFactory.Models;
@model IEnumerable<DrSneussFactory.Models.Engineer>;

@if (Model.Count() == 0 && ViewBag.SearchFlag == 0)
{
  <p>There are no engineers to display, please add an engineer.</p>
}
else if (Model.Count() == 0 && ViewBag.SearchFlag == 1)
{
  <p>Your search returned no results.</p>
}
<form action="/engineers/create" method="get">
  <button type="submit" class="btn btn-primary mb-3">Add New Engineer</button>
</form>
@foreach (Engineer engineer in Model)
{
  @Html.Partial("EngineerCard", engineer)
}